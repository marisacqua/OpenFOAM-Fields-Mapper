// Mapping mode:
// Planar - map in the directionOfMapping
// Cylindrical - map on cylinder with axis directionOfMapping
// Spherical - map on a cylinder in all directions
mode spherical;

// ---=== Parameters, related to .dat file coords  ===---
centerOfData    0;
inverseData     false;
// ------------------------------------------------------

// ---===    Parameters, related to mesh coords    ===---
mappingOrigin       (0.05 0.05 0);
directionOfMapping  (1 0 0);
// ------------------------------------------------------

